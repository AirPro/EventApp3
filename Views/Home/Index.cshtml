@model IEnumerable<Event>
@{
    ViewData["Title"] = "Event Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Event Information page!</p>
</div>
<table class="table">
    <thead>
        <tr><th>Event Id</th><th>Event Name</th><th>Event City</th><th>Event Date</th><th>Venue Name</th><th>Venue Address</th><th>Promoter Name</th></tr>
    </thead>
    <tbody>
        @foreach (Event e in Model)
        {
            <tr>
                <td>@e.EventId</td>
                <td>@e.EventName</td>
                <td>@e.EventCity</td>
                <td>@e.EventDate</td>
                <td>@e.VenueName</td>
                <td>@e.VenueAddress</td>
                <td>@e.PromoterName</td>
                <td>
                    <a asp-action="Edit" asp-controller="Event" asp-route-id="@e.EventId"
                       class="btn btn-outline-dark">Edit</a>
                    <a asp-action="Delete" asp-controller="Event" asp-route-id="@e.EventId"
                       class="btn btn-outline-dark">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
